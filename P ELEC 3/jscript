// Get all the elements that need to be toggled
const burgerIcon = document.querySelector('.burger-icon');
const offScreenMenu = document.querySelector('.off-screen-menu');
const navMenu = document.getElementById('nav-menu');
const sections = [
  'profile-container',
  'about-section',
  'work-experience-section',
  'education-section',
  'skills-section',
  'exercises-section',
  'project-section',
];

// Check if all elements exist before proceeding
if (!burgerIcon || !offScreenMenu || !navMenu) {
  console.error('One or more required elements are missing.');
  return;
}

// Create a function to toggle the menu items
function toggleMenu() {
  burgerIcon.classList.toggle('active');
  offScreenMenu.classList.toggle('active');
  navMenu.classList.toggle('open');
  sections.forEach((section) => {
    const sectionElement = document.getElementById(section);
    if (!sectionElement) {
      console.error(`Section element with id "${section}" is missing.`);
      return;
    }
    sectionElement.classList.toggle('hidden');
  });
}

// Add event listeners to the burger icon and checkbox
if (burgerIcon) {
  burgerIcon.addEventListener('click', toggleMenu);
}
if (document.getElementById('burger-icon-checkbox')) {
  document.getElementById('burger-icon-checkbox').addEventListener('click', toggleMenu);
}